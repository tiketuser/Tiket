rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Artist aliases - read by all, write only via admin SDK
    match /artist_aliases/{aliasId} {
      allow read: if true;
      allow write: if false;
    }

    // Users - authenticated users can read/write their own doc
    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Concerts - public read, write only via admin SDK
    match /concerts/{concertId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Tickets - public read for available, authenticated create, owner update
    match /tickets/{ticketId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.sellerId ||
        request.auth.token.admin == true
      );
    }

    // Transactions - read only by buyer or seller, write only via admin SDK
    match /transactions/{transactionId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.buyerId ||
        request.auth.uid == resource.data.sellerId
      );
      allow write: if false;
    }

    // Platform config - public read, write only via admin SDK
    match /config/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}